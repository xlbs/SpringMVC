<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springmvc.dao.DataOperatMapper">

    <!--查询，返回List<Map>-->
    <select id="querySql" parameterType="java.lang.String" resultType="java.util.Map">
         ${sql}
    </select>

    <!--保存，返回主键-->
    <insert id="saveSql" parameterType="com.springmvc.entity.SaveObj">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            select LAST_INSERT_ID()
        </selectKey>
        ${sql}
    </insert>

    <!--修改，返回受影响条数-->
    <update id="updateSql" parameterType="java.lang.String" >
        ${sql}
    </update>

    <!--删除，返回受影响条数-->
    <delete id="deleteSql" parameterType="java.lang.String">
        ${sql}
    </delete>

</mapper>